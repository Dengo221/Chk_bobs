{
  "version": 2,
  "builds": [
    {
      "src": "api/api.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/api.php"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.php"
    }
  ]
}
